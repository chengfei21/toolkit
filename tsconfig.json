{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "es2015.promise",
      "es5",
      "dom"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "lib",
    "output",
    "_test_"
  ],
  "include": [
    "src/**/*"
  ]
}